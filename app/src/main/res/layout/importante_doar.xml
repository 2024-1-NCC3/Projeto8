<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    tools:context=".importDoar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFE9D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="32sp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Porque doar sangue é importante?"
                android:textColor="#000000"
                android:textSize="32sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="13dp"
                app:cardBackgroundColor="#C74343"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="1. Uma única doação pode salvar até 4 vidas."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="51dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Se vc está em boas condições de saúde, doe. Afinal, é uma atitude simples, rápida e segura que pode ajudar até quatro pessoas. "
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#C74343"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="2. não existe substituto pro sangue."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="51dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Nenhum cientista ainda encontrou outra maneira de atender alguém que precise de sangue, além da doação."
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#C74343"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="3. não há risco de contrair doenças durante a doação."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Além de todo material utilizado durante a coleta ser esterilizado e descartável, todos os candidatos a doação são submetidos a uma entrevista clínica, onde serão avaliados os critérios de doação, conforme legislação vigente do Ministério da Saúde/Agência Nacional de Vigilância Sanitária (Anvisa)."
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#c74343"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="4. seu organismo repõe rapidamente o sangue doado"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Um adulto, seja do sexo masculino ou feminino, possui em média cinco litros de sangue em seu corpo. E em uma doação são coletados no máximo 450 mililitros. Ou seja, menos de 10% de todo o sangue do seu organismo. Esse volume é reposto em 24 horas pelo organismo"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="40dp"
                app:cardBackgroundColor="#c74343"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/poppins"
                    android:text="Voluntários que doarem sangue têm direito a um dia de folga a cada 12 meses trabalhados, desde que a doação esteja devidamente comprovada, de acordo com os termos previstos na Consolidação das Leis do Trabalho (CLT)."
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="5. o doador tem direito a um dia de folga no trabalho."
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>