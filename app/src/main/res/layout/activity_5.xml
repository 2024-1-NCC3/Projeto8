<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa"
    tools:context=".Activity5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFE9D8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/button_back5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:clickable="true"
                    android:contentDescription="@string/user_icon_description"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/button_back" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/poppins_semibold"

                    android:text="Etapas da doação de sangue."
                    android:textColor="#000000"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="20sp"
                    android:fontFamily="@font/poppins"
                    android:text="O gesto da doação envolve também um processo lógico e bem estruturado com a finalidade de oferecer segurança e comodidade ao doador.

Veja abaixo as etapas da doação:"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="13dp"
                    app:cardBackgroundColor="#C74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="1. Registro e triagem inicial"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Ao chegar ao local de doação, você será solicitado a preencher um formulário com informações básicas sobre sua saúde e histórico médico. Em seguida, você passará por uma triagem inicial para determinar se está apto a doar sangue."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#C74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="2. Entrevista de triagem"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Você terá uma entrevista privada com um profissional de saúde para revisar seu histórico médico, incluindo perguntas sobre viagens recentes, exposição a certas doenças, medicamentos que está tomando e seu estilo de vida."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#C74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="3. Testes de saúde"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Antes de doar sangue, uma amostra de sangue será retirada para testes de saúde, como a verificação do seu hematócrito (volume de células vermelhas no sangue) e a presença de doenças infecciosas."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#c74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="4. Doação de sangue"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Uma vez aprovado nos testes de saúde, você será encaminhado para a área de doação. Um profissional de saúde limpará a área do braço e inserirá uma agulha em uma veia para coletar o sangue. A doação em si geralmente leva de 5 a 10 minutos."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="0dp"
                    app:cardBackgroundColor="#c74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Após a doação, você será levado a uma área de recuperação, onde poderá descansar por alguns minutos e desfrutar de uma bebida e um lanche para ajudar na reposição de líquidos e nutrientes."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="5. Recuperação"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="#c74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Depois de se sentir bem o suficiente, você será liberado, mas é recomendável que você evite atividades extenuantes e mantenha-se hidratado nas próximas horas."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="5. Observação"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="#c74343"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins"
                        android:text="Após a doação, é importante monitorar sua saúde. Se você sentir algum efeito colateral adverso, como tontura ou fraqueza, entre em contato com o local de doação ou procure assistência médica, se necessário."
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="5. Acompanhamento"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>